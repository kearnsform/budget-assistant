<% layout('layouts/boilerplate')%>

    <h1 class="display-4">Accounts</h1>
    <br>
    <table class="table table-sm table-small table-bordered table-hover" id="accountTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% for(let account of accounts){ %>
                <tr>
                    <td>
                        <%=account.name %>
                    </td>
                    <td>
                        <a href="/accounts/<%=account.id %>/edit"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
    <a href="/accounts/new" class="btn btn-primary">New Account</a>