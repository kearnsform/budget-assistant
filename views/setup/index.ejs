<% layout('layouts/boilerplate')%>

    <h1 class="display-4">Setup</h1>
    <br>
    <div class="container small-gutters">
        <div class="row">
            <div class="col-5 form-border">
                <h4 class="display-5">Accounts</h4>
                <table class="table table-sm table-bordered table-hover" id="accountTable">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let account of accounts){ %>
                            <tr>
                                <td>
                                    <%=account.name %>
                                </td>
                                <td>
                                    <a href="/accounts/<%=account.id %>/edit"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <a href="/accounts/new" class="btn btn-primary">New Account</a>
            </div>
            <div class="col-1"></div>
            <div class="col-6 form-border">
                <h4 class="display-5">Categories</h4>
                <table class="table table-sm table-bordered table-hover" id="categoryTable">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Active</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let category of categories){ %>
                            <tr>
                                <td>
                                    <%=category.name %>
                                </td>
                                <td>
                                    <%=category.type %>
                                </td>
                                <td>
                                    <%=category.active %>
                                </td>
                                <td>
                                    <a href="/categories/<%=category.id %>/edit"><i class="bi bi-pencil-square"></i></a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <a href="/categories/new" class="btn btn-primary">New Category</a>
            </div>
        </div>
    </div>