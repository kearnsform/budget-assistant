<% layout('layouts/boilerplate')%>

    <h1 class="display-4">Edit Budget Entry</h1>
    <form class="form-border validated-form" method="POST" action="/budget/<%=budgetItem.id%>?_method=PATCH" novalidate>
        <div class="form-group row">
            <label for="category" class="col-sm-3 col-form-label">Category:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="category" name="budgetItem[category]" value="<%= budgetItem.category %>" required readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="amount" class="col-sm-3 col-form-label">Amount:</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="amount" name="budgetItem[amount]" value="<%= budgetItem.amount %>" required>
            </div>
        </div>
        <br>
        <button class="btn btn-success">Save</button>
    </form>
    <br>
    <form method="POST" action="/budget/<%= budgetItem.id %>?_method=DELETE">
        <button class="btn btn-danger">Delete</button>
    </form>
    <br>
    <a href="/budget">Go Back</a>