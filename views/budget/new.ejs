<% layout('layouts/boilerplate')%>

    <h1 class="display-4">Create a new budget entry</h1>

    <form class="form-border validated-form" action="/budget" method="post" novalidate>
        <div class="form-group row">
            <label for="category" class="col-sm-3 col-form-label">Category:</label>
            <div class="col-sm-5">
                <select name="budgetItem[category]" id="category">
                    <% for(let category of categories){ %>
                    <option class="form-control" value="<%=category%>"><%=category%></option>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="amount" class="col-sm-3 col-form-label">Amount:</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="amount" name="budgetItem[amount]" required>
            </div>
        </div>
        <button class="btn btn-success">Save</button>
    </form>
    <br>
    <a href="/budget">Go Back</a>